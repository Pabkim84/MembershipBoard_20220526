<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Member">
    <insert id="save" parameterType="member">
        insert into member_table (id, memberId, memberPassword, memberName, memberEmail, memberMobile)
        values (#{id}, #{memberId}, #{memberPassword}, #{memberName}, #{memberEmail}, #{memberMobile})
    </insert>
    <select id="memberId" parameterType="String" resultType="String">
        select memberId from member_table where memberId=#{memberId}
    </select>
    <select id="login" parameterType="member" resultType="member">
        select * from member_table where memberId=#{memberId} and memberPassword=#{memberPassword}
    </select>
    <select id="memberList" parameterType="member" resultType="member">
        select * from member_table;
    </select>
    <select id="findById" parameterType="Long" resultType="member">
        select * from member_table where id=#{id}
    </select>
    <delete id="delete" parameterType="id">
        delete from member_table where id=#{id}
    </delete>
    <update id="update" parameterType="id">
        update member_table set memberPassword=#{memberPassword}, memberMobile=#{memberMobile}
    </update>
</mapper>